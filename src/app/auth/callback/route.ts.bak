import { NextResponse } from 'next/server';
import type { NextRequest } from 'next/server';

/**
 * OAuth callback handler
 * For PKCE flow: redirects to client-side page for code exchange
 * For implicit flow: redirects to home (client will process hash fragment)
 */
export async function GET(request: NextRequest) {
  const { searchParams } = new URL(request.url);
  const code = searchParams.get('code');
  const error = searchParams.get('error');
  const errorDescription = searchParams.get('error_description');

  // Handle OAuth errors
  if (error) {
    console.error('OAuth error:', error, errorDescription);
    return NextResponse.redirect(
      new URL(
        `/login?error=${encodeURIComponent(errorDescription || error)}`,
        request.url
      )
    );
  }

  // PKCE flow: redirect to client-side handler with code
  if (code) {
    const url = new URL('/auth/callback/exchange', request.url);
    url.searchParams.set('code', code);
    return NextResponse.redirect(url);
  }

  // Implicit flow: no code means tokens are in hash fragment
  // Redirect to home - the client-side Supabase will process the hash
  return NextResponse.redirect(new URL('/home', request.url));
}
